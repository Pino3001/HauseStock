<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HauseStock" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_fondo</item>
        <item name="colorPrimaryDark">@color/purple_fondo</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">@color/purple_fondo</item>
        <item name="backgroundColor">@color/purple_fondo</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.HauseStock.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.listview" parent="Theme.HauseStock">
        <item name="checkedButton">@id/checkbox</item>
        <item name="checkboxStyle">@style/Widget.Material3.CheckedTextView</item>
        <item name="checkedTextViewStyle">@style/Widget.AppCompat.ListView</item>
        <item name="checkedIcon">@id/checkbox</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:checkedButton">@id/checkbox</item>
    </style>

    <style name="Theme.HauseStock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HauseStock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.HauseStock.Texto">
        <item name="fontFamily">casual</item>
    </style>
    <style name="Theme.AlertDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="background">@drawable/fondo_app</item>
        <item name="alertDialogTheme">@drawable/fondo_app</item>
        <item name="alertDialogButtonGroupStyle">@id/horizontal_only</item>
        <item name="android:windowBackground">@drawable/fondo_app</item>
    </style>
    <style name="Theme.lista" parent="Theme.HauseStock">
        <item name="android:checkMarkTint">@color/purple_fondo</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spiner_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">@color/purple_fondo</item>
    </style>

</resources>

